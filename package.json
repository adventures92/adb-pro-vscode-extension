{
  "name": "adb-pro",
  "displayName": "ADB Pro",
  "publisher": "adventures92",
  "icon": "resources/icon.png",
  "description": "The ultimate Android Debug Bridge (ADB) tool for VS Code. Manage devices, install APKs, view Logcat, and control permissions directly from your editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "android",
    "adb",
    "mobile",
    "debug",
    "apk",
    "logcat",
    "device manager",
    "permissions"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/adventures92/adb-pro-vscode-extension"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "adb-pro.connect",
        "title": "Connect to Device IP",
        "category": "ADB"
      },
      {
        "command": "adb-pro.disconnect",
        "title": "Disconnect Device",
        "category": "ADB"
      },
      {
        "command": "adb-pro.installApk",
        "title": "Install APK",
        "category": "ADB"
      },
      {
        "command": "adb-pro.uninstallApp",
        "title": "Uninstall App",
        "category": "ADB"
      },
      {
        "command": "adb-pro.clearAppData",
        "title": "Clear App Data",
        "category": "ADB"
      },
      {
        "command": "adb-pro.killApp",
        "title": "Force Stop App",
        "category": "ADB"
      },
      {
        "command": "adb-pro.restartApp",
        "title": "Restart App",
        "category": "ADB",
        "icon": "$(debug-restart)"
      },
      {
        "command": "adb-pro.restartServer",
        "title": "Restart ADB Server",
        "category": "ADB",
        "icon": "$(refresh)"
      },
      {
        "command": "adb-pro.shell",
        "title": "Run Shell Command",
        "category": "ADB"
      },
      {
        "command": "adb-pro.toggleWifi",
        "title": "Toggle Wi-Fi",
        "category": "ADB"
      },
      {
        "command": "adb-pro.toggleMobileData",
        "title": "Toggle Mobile Data",
        "category": "ADB"
      },
      {
        "command": "adb-pro.toggleAirplaneMode",
        "title": "Toggle Airplane Mode",
        "category": "ADB"
      },
      {
        "command": "adb-pro.setAppPermission",
        "title": "Set App Permission",
        "category": "ADB"
      },
      {
        "command": "adb-pro.screenshot",
        "title": "Take Screenshot",
        "category": "ADB"
      },
      {
        "command": "adb-pro.logcat",
        "title": "Logcat (Filter by Package/Level)",
        "category": "ADB"
      },
      {
        "command": "adb-pro.selectTargetApp",
        "title": "Select Target App",
        "category": "ADB"
      },
      {
        "command": "adb-pro.refresh",
        "title": "Refresh Devices",
        "category": "ADB",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "adb-sidebar",
          "title": "ADB",
          "icon": "resources/sidebar.svg"
        }
      ]
    },
    "views": {
      "adb-sidebar": [
        {
          "id": "adb-device-list",
          "name": "Devices & Apps",
          "icon": "resources/sidebar.svg"
        },
        {
          "type": "webview",
          "id": "adbWebview",
          "name": "ADB Control Panel",
          "icon": "resources/sidebar.svg"
        }
      ]
    },
    "configuration": {
      "title": "ADB",
      "properties": {
        "adb.path": {
          "type": "string",
          "default": "",
          "description": "Path to the adb executable. If empty, attempts to find adb in PATH."
        },
        "adb.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for ADB commands."
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "adb-pro.refresh",
          "when": "view == adbWebview",
          "group": "navigation"
        },
        {
          "command": "adb-pro.connect",
          "when": "view == adbWebview",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "echo \"No tests specified\""
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "sinon": "^21.0.0",
    "typescript": "^5.1.3"
  }
}